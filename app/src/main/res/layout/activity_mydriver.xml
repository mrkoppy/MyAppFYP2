    <Button
        android:id="@+id/btn_create_route"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:background="@drawable/buttonshape"
        android:onClick="createRoute"
        android:text="@string/create_route"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_drivercurrentroute"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:background="@drawable/buttonshape2"
        android:onClick="drivercurrentroute"
        android:text="Current Route"
        android:textColor="#FFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_driverdeleteroute"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/buttonshape"
        android:onClick="driverdeleteRoute"
        android:text="@string/delete_route"
        android:textColor="#FFF"
        android:textSize="15sp" />


</RelativeLayout>

