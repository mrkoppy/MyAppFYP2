<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".mydriver">


    <TextView
        android:id="@+id/mydriverheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/welcome_to_driver_page"
        android:textSize="20sp"
        app:fontFamily="@font/roboto_mono_medium" />

    <TextView
        android:id="@+id/mydrivercontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Delete current route before create new route"
        android:textColor="#000"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_mono_medium" />

    <TextView
        android:id="@+id/btmm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/back_to_main_menu"
        android:textColor="#000"
        android:textSize="20sp"
        android:onClick="mydriverbtmenu"
        app:fontFamily="@font/vidaloka"/>

